{
  "name": "aries-framework-javascript",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "files": [
    "build/lib"
  ],
  "scripts": {
    "compile": "tsc",
    "lint": "eslint --ignore-path .gitignore '**/*.+(js|ts)'",
    "prettier": "prettier --ignore-path .gitignore '**/*.+(js|json|ts)'",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "test": "jest --verbose",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/samples/agency.ts",
    "prod:start": "node ./build/samples/agency.js",
    "prod:debug": "DEBUG=aries-framework-javascript yarn prod:start",
    "prod:build": "rm -rf build && yarn compile",
    "validate": "npm-run-all --parallel lint compile",
    "prepack": "rm -rf build && yarn compile"
  },
  "dependencies": {
    "@types/express": "^4.17.0",
    "await-poll": "^1.0.2",
    "base64url": "^3.0.1",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "lodash.isempty": "^4.4.0",
    "node-fetch": "^2.6.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.16",
    "@types/lodash.isempty": "^4.4.6",
    "@types/node-fetch": "^2.3.7",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "cors": "^2.8.5",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.1.0",
    "indy-sdk": "^1.14.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rxjs": "^6.5.2",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn validate"
    }
  }
}
